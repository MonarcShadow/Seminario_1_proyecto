<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <About>
    <Summary>Recolectar madera</Summary>
    <Description>El agente debe recolectar {{wood_target}} unidades de madera sin mobs hostiles.</Description>
  </About>

  <ServerSection>
    <ServerInitialConditions>
      <!-- Mundo normal (Overworld), sin clima extremo ni ciclo forzado -->
      <Time>
        <StartTime>1000</StartTime>
        <AllowPassageOfTime>true</AllowPassageOfTime>
      </Time>
      <Weather>clear</Weather>
      <!-- Desactivar mobs hostiles -->
      <ServerProperties>
        <Property name="doMobSpawning" value="true"/>      <!-- permite animales pasivos -->
        <Property name="spawn-monsters" value="false"/>    <!-- desactiva mobs hostiles -->
        <Property name="spawn-animals" value="true"/>      <!-- mantiene vacas/ovejas/etc -->
        <Property name="doDaylightCycle" value="true"/>
        <Property name="doImmediateRespawn" value="true"/>
        <Property name="keepInventory" value="true"/>
        <Property name="pvp" value="false"/>
        <Property name="difficulty" value="1"/>            <!-- 0 Peaceful, 1 Easy -->
      </ServerProperties>
    </ServerInitialConditions>

    <ServerHandlers>
      <!-- Mundo Overworld por defecto: usar DefaultWorldGenerator -->
      <DefaultWorldGenerator forceReset="true"/>
      <!-- Decoradores opcionales: un marcador de inicio -->
      <DrawingDecorator>
        <DrawBlock x="0" y="5" z="0" type="gold_block"/>
      </DrawingDecorator>

      <!-- Terminar misión cuando el agente cumpla el objetivo -->
      <ServerQuitFromConsoleCommand/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>{{agent_name}}</Name>
    <AgentStart>
      <!-- Aparición cerca del origen; Malmo ajusta a superficie -->
      <Placement x="0.5" y="4" z="0.5" yaw="0"/>
      <!-- Inventario vacío para forzar recolección -->
      <Inventory/>
    </AgentStart>

    <AgentHandlers>
      <!-- Observaciones útiles para conteo de madera -->
      <ObservationFromFullStats/>
      <ObservationFromRay/>
      <ObservationFromNearbyEntities>
        <Range name="entities" xrange="10" yrange="5" zrange="10"/>
      </ObservationFromNearbyEntities>
      <ObservationFromDiscreteCell/>
      <ObservationFromInventory/>

      <!-- Comandos para moverse y romper -->
      <ContinuousMovementCommands turnSpeedDegs="180"/>
      <InventoryCommands/>
      <DiscreteMovementCommands/>
      <ChatCommands/>

      <!-- Regla de finalización: cuando el inventario tenga la madera requerida -->
      <AgentQuitFromInventory>
        <!-- Cualquiera de los tipos de tronco (Oak por defecto). 
             Se puede cambiar el 'type' por log variantes si se desea. -->
        <Item type="oak_log" amount="{{wood_target}}"/>
      </AgentQuitFromInventory>
    </AgentHandlers>
  </AgentSection>
</Mission>
